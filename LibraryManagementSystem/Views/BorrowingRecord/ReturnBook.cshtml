@model LibraryManagementSystem.Models.BorrowingRecord

<h2>Return Book</h2>

<div>
    <p><strong>Book:</strong> @Model.Book.Title</p>
    <p><strong>Borrower:</strong> @Model.LibraryMember.FullName</p>
    <p><strong>Borrowed Date:</strong> @Model.BorrowedDate.ToShortDateString()</p>
    <p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
</div>

<form asp-action="ReturnBook" method="post">
    <input type="hidden" asp-for="BorrowingRecordId"/>
    <button type="submit" class="btn btn-primary">Confirm Return</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
