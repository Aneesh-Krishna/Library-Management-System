@model LibraryManagementSystem.Models.BorrowingRecord

<h2>Borrow a Book</h2>

<form asp-action="BorrowBook" method="post">
    <div class="form-group">
        <label>Book</label>
        <select asp-for="BookId" asp-items="ViewBag.Books" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Library Member</label>
        <select asp-for="LibraryMemberId" asp-items="ViewBag.LibraryMembers" class="form-control"></select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Borrow</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
