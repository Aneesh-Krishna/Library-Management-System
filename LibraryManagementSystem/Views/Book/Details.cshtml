@model LibraryManagementSystem.Models.Book

<h2>Book Details</h2>

<div>
    <h4>Title:</h4> <p>@Model.Title</p>
    <h4>Author:</h4> <p>@Model.Author</p>
    <h4>Available Copies:</h4> <p>@Model.AvailableCopies</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-primary">Back to List</a>
